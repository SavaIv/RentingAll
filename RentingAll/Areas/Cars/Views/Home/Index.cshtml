@{
    if (!Model.Cars.Any())
    {
        <div class="mt-4 p-5 bg-primary text-white rounded">
              <h1 class="text-center">There are no cars in our database.</h1>
              <h2 class="text-center">If you want to add a car to out site, please press the button below</h2>
              <p class="text-center">
                <a asp-controller="Cars" asp-action="Add" class="btn btn-light btn-lg" role="button">Add a Car</a>
              </p>
        </div>
    }
}

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
        @for (int i = 0; i < Model.Cars.Count; i++)
        {
            var car = Model.Cars[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
              <img src="@car.ImageUrl" class="d-block w-100" alt="@car.Brand @car.Model">
              <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">@car.Brand @car.Model</a></h5>
                <p>For more cars - visit our site.</p>
              </div>
            </div>
        }

